//! TEST never_while
//! IGNORE compiler
extern fun print(s: string);

fun test_rt(a: bool) -> bool {
    while true {
        return false;
    }
    return a;
}
fun test_br(a: bool) -> bool {
    while true {
        break;
    }
    return a;
}
fun test_ct(a: bool) -> bool {
    while true {
        continue;
    }
    return a;
}

fun main() {
    if test_br(false) {
        print("true");
    } else {
        print("false");
    }
    if test_rt(true) {
        print("true");
    } else {
        print("false");
    }
}

//! TEST while_ret_break
//! IGNORE compiler
extern fun print(s: string);

fun test(a: bool) -> bool {
    while true {
        if a {
            return true;
        } else {
            break;
        }
    }

    false;
}
fun main() {
    if test(false) {
        print("true");
    } else {
        print("false");
    }
}