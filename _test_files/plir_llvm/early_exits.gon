//! TEST never_if
fun test(a: bool) -> bool {
    let bl = if a {
        return true;
    } else {
        3;
    };
    
    bl == 2;
}

//! TEST never_while
fun test_rt(a: bool) -> bool {
    while true {
        return false;
    }
    return a;
}
fun test_br(a: bool) -> bool {
    while true {
        break;
    }
    return a;
}
fun test_ct(a: bool) -> bool {
    while true {
        continue;
    }
    return a;
}

//! TEST while_ret_break
fun test(a: bool) -> bool {
    while true {
        if a {
            return true;
        } else {
            break;
        }
    }

    false;
}